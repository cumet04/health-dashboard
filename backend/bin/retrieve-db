#!/bin/bash -e

# kamalでデプロイされている先のDBデータをローカルに展開する

cd $(dirname $0)/..

echo '.backup /rails/tmp/db.sqlite3' | kamal app exec --quiet --interactive --reuse bin/rails dbconsole
kamal app exec -q --reuse cat /rails/tmp/db.sqlite3 | sed '1d' > storage/development.sqlite3
./bin/rails db:environment:set
